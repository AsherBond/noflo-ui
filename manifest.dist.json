{
  "name": "$NOFLO_APP_TITLE",
  "short_name": "$NOFLO_APP_NAME",
  "description": "$NOFLO_APP_DESCRIPTION",
  "version": "$NOFLO_APP_VERSION",
  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },
  "sandbox": {
    "pages": [
      "preview/iframe.html"
    ]
  },
  "permissions": [
    "https://passport.thegrid.io/",
    "$NOFLO_OAUTH_GATE",
    "https://api.github.com/",
    "https://api.flowhub.io/",
    "https://secure.gravatar.com/",
    "storage",
    "unlimitedStorage",
    "identity"
  ],
  "icons": {
    "128": "app/$NOFLO_THEME-128.png"
  }
}
